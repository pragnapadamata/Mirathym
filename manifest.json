{
  "manifest_version": 3,
  "name": "Mirathym",
  "description": "AI carbon footprint analyzer â€” Measure. Mind. Minimize.",
  "version": "0.1.0",
  "action": {
    "default_title": "Mirathym",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "permissions": [
    "storage",
    "scripting",
    "webRequest",
    "activeTab",
    "tabs",
    "system.cpu",
    "system.memory",
    "alarms",
    "offscreen"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://api.co2signal.com/*",
    "https://api.climatiq.io/*",
    "https://api.carboninterface.com/*",
    "https://api.openai.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://*.openai.com/*",
    "https://*.anthropic.com/*",
    "https://*.googleapis.com/*",
    "https://*.google.com/*"
  ],
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "minimum_chrome_version": "120"
}
